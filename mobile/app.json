{
  "expo": {
    "name": "Klaim",
    "slug": "klaim-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "klaim",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.klaim.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Klaim needs access to your camera to capture images for IP asset creation.",
        "NSPhotoLibraryUsageDescription": "Klaim needs access to your photo library to select images for IP asset creation.",
        "NSFaceIDUsageDescription": "Klaim uses Face ID for secure and convenient authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.klaim.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Klaim to access your camera to capture images for IP assets."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Klaim to access your photos to select images for IP assets."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "klaim-mobile"
      }
    }
  }
}
